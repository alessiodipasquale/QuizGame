<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.quizgame">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/qg"
        android:label="@string/app_name"
        android:roundIcon="@drawable/qg"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".GameScreenMaster"
            android:exported="false" />
        <activity
            android:name=".WaitingRoom"
            android:exported="false" />
        <activity
            android:name=".EditQeA"
            android:exported="false" />
        <activity
            android:name=".GameScreen"
            android:exported="false" />
        <activity
            android:name=".LoadingScreen"
            android:exported="false" />
        <activity
            android:name=".ChooseLobby"
            android:exported="false" />
        <activity
            android:name=".ConfigureGame"
            android:exported="false" />
        <activity
            android:name=".ChooseRole"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>