<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvVisualizeQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Question"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/ctvVisualizeAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="Answer1"
        android:textSize="16dp" />

    <CheckBox
        android:id="@+id/ctvVisualizeAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="Answer2"
        android:textSize="16dp" />

    <CheckBox
        android:id="@+id/ctvVisualizeAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="Answer3"
        android:textSize="16dp" />

    <CheckBox
        android:id="@+id/ctvVisualizeAnswer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        android:hint="Answer4"
        android:textSize="16dp" />

</LinearLayout>